{
  "headers": [
    {
      "source": "/Scenes/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        },
        {
          "key": "Cross-Origin-Opener-Policy", 
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/soccer",
      "destination": "/Scenes/soccer/index.html"
    },
    {
      "source": "/3dball", 
      "destination": "/Scenes/3dball/index.html"
    },
    {
      "source": "/dungeon",
      "destination": "/Scenes/dungeon/index.html"
    }
  ]
}
